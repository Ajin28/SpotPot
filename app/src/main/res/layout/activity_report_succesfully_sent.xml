<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ReportSuccesfullySent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/background_light"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/iconapp"

            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/orange_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="16dp"

            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Submitted"
            android:textStyle="bold"
            android:textColor="#676B69"
            android:textSize="30dp"/>


        <TextView
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your Service!"
            android:textStyle="bold"
            android:textColor="#676B69"
            android:textSize="30dp"/>



        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Return"

            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button"
            android:layout_marginTop="32dp"
            android:onClick="openAction"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_action_check"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>


</LinearLayout>