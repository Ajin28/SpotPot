<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".FAQ">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_action_help"
        android:text="  F.A.Q."
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="30dp"
       android:layout_weight="1"
       android:orientation="vertical"
       android:scrollbars="vertical">

       <TextView
           android:id="@+id/textView3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:drawableLeft="@drawable/ic_action_ques"
           android:textColor="#000000"
           android:padding="5dp"
           android:text="  How to make a report?" />


       <TextView
           android:id="@+id/textView4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:textColor="#000000"
           android:padding="5dp"
           android:text='Step 1) Tap "Make a Report" button on Homepage' />


       <TextView
           android:id="@+id/textView5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:textColor="#000000"
           android:padding="5dp"
           android:text='Step 2) Tap "Send Location" button on Map-page to get your current location (same as the location of pothole)' />

       <TextView
           android:id="@+id/textView6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:textColor="#000000"
           android:padding="5dp"
           android:text='Step 3)After getting your current location hit "Submit" button to uplad location of pothole' />

       <TextView
           android:id="@+id/textView7"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:textColor="#000000"
           android:padding="5dp"
           android:text='Step 4)Take pictures of pothole and again hit "Submit" to upload the pictures' />

       <TextView
           android:id="@+id/textView8"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:drawableLeft="@drawable/ic_action_ques"
           android:textColor="#000000"
           android:padding="5dp"
           android:text="  How to view my report?" />
       <TextView
           android:id="@+id/textView9"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:textColor="#000000"
           android:padding="5dp"
           android:text='To view all your past reports tap on the "View Past-Reports" button on Homepage' />


       <TextView
           android:id="@+id/textView11"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:drawableLeft="@drawable/ic_action_ques"
           android:textColor="#000000"
           android:padding="5dp"
           android:text="  Do you have more Queries?" />

       <EditText
           android:id="@+id/editText"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:ems="10"
           android:gravity="start"
           android:inputType="textMultiLine"
           android:hint="Ask your question here" />

   </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_button"
            android:padding="15dp"
            android:text="Submit"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</LinearLayout>